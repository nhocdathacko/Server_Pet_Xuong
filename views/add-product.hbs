        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/index" class="list-group-item  ">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Bảng điều khiển
                    </a>
                    <a href="/user" class="list-group-item">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Quản lý thành viên
                    </a>
                    <a href="/category" class="list-group-item">
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Loại sản phẩm
                    </a>
                    <a href="/product" class="list-group-item ">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Bảng sản phẩm
                    </a>
                    <a href="/statistical" class="list-group-item">
                        <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Thống kê
                    </a>
                </div>

                <div class="well">
                    <h4>Tổng người dùng</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="300" aria-valuemin="0"
                            aria-valuemax="100" style="width: 100%;">
                            300
                        </div>
                    </div>
                    <h4>Đang online </h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="4" aria-valuemin="0"
                            aria-valuemax="100" style="width: 4%;">
                            4
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Thống kê</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span></h2>
                                <h4>Thành viên</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></h2>
                                <h4>Loại sản phẩm</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span></h2>
                                <h4>Bảng sản phẩm</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!--main content start-->
                <section id="main-content">
                    <section class="wrapper">
                        <h3><i class="fa fa-angle-right"></i> Cập Nhật</h3>
                        <div class="row mt">
                            <div class="col-lg-12">
                                <div class="form-panel">
                                    <h4 class="mb"><i class="fa fa-angle-right"></i> Cập nhật thú cưng</h4>
                                    <form class="form-horizontal style-form" action="/add-product"
                                        method="post">
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Name"
                                                    value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Price</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Price"
                                                    value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Describes</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Describes"
                                                    value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Evaluated</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Evaluate"
                                                    value=""  disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Category</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="category_id">
                                                    {{#each category}}
                                                    <option value="{{this._id}}">{{this.name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Quantity</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="Quantity"
                                                    value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">IsPet</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="IsPet">
                                                    <option selected value="{{result.T}}">{{result.T}}</option>
                                                    <option value="{{result.F}}">{{result.F}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">IsStop</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="IsStop">
                                                    <option selected value="{{result.T}}">{{result.T}}</option>
                                                    <option value="{{result.F}}">{{result.F}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 col-sm-2 control-label">Image</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" onchange="onChangeFile()"
                                                    id="image-file" name="Image" value="">
                                                <img style="height: 100px; width: 100px;" class="form-control"
                                                    src="" id="image-product">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="top-menu">
                                                <ul class="nav pull-right top-menu">
                                                    <button type="submit">Lưu</button>
                                                </ul>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
</section>

