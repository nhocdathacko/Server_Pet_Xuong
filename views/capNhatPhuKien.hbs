<section id="container">
    <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="http://localhost:3000/littleMonster/thongKe" class="logo"><b>LITTLE MONSTER</b></a>
        <!--logo end-->
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li><a class="logout" href="http://localhost:3000/littleMonster">Đăng xuất</a></li>
            </ul>
        </div>
    </header>
    <!--header end-->

    <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">

                <p class="centered"><a href="#"><img src="/images/avatar.jpg" class="img-circle" width="60"></a></p>
                <h5 class="centered">Trần Võ Thục Miên</h5>
                <li class="mt">
                    <a href="http://localhost:3000/littleMonster/themMoi">
                        <i class="fa fa-tasks"></i>
                        <span>Thêm mới</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="http://localhost:3000/littleMonster/danhSach">
                        <i class="fa fa-th"></i>
                        <span>Danh Sách</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="http://localhost:3000/littleMonster/thongKe">
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Thống Kê</span>
                    </a>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Cập Nhật</h3>

            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Cập nhật phụ kiện thú cưng</h4>
                        <form class="form-horizontal style-form" action="/san-pham/{{product._id}}/edit" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Mã phụ kiện</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="_id" value="{{product._id}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên loại thú cưng</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="category_id">
                                        {{#each categories}}
                                        {{#if this.selectedId}}
                                        <option selected value="{{this._id}}">{{this.name}}</option>
                                        {{else}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên phụ kiện</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="name" value="{{product.name}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Giá tiền</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="price" value="{{product.price}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Số lượng</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="quantity"
                                        value="{{product.quantity}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Mô tả</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="description"
                                        value="{{product.description}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Ngày sản xuất</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" name="release" value="{{product.release}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control" onchange="onChangeFile();" id="image-file"
                                        name="image">
                                    <img style="height: 100px; width: 100px;" class="form-control"
                                        src="{{product.image}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu">
                                        <li><button type="submit">Lưu</button>></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->

        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

</section>