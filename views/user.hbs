<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/index" class="list-group-item ">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Bảng điều khiển
          </a>
          <a href="/user" class="list-group-item main-color-bg"><span class="glyphicon glyphicon-user"
              aria-hidden="true"></span> Quản
            lý thành viên</a>
          <a href="/category" class="list-group-item"><span class="glyphicon glyphicon-list-alt"
              aria-hidden="true"></span> Loại sản phẩm</a>
          <a href="/product" class="list-group-item"><span class="glyphicon glyphicon-calendar"
              aria-hidden="true"></span> Bảng sản phẩm</a>
          <a href="/statistical" class="list-group-item "><span class="glyphicon glyphicon-stats"
              aria-hidden="true"></span> Thống kê</a>
        </div>

        <div class="well">
          <h4>Nhân Viên Nam</h4>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
              style="width: 60%;">
              60%
            </div>
          </div>
          <h4>Nhân Viên Nữ</h4>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"
              style="width: 40%;">
              40%
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Nhân Viên</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <input class="form-control" type="text" placeholder="Lọc nhân viên">
              </div>
            </div>
            <br>
            <table class="table table-striped table-hover">
              <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Image</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
              </tr>
              {{#each user}}
              <tr>
                <td>{{this.index}}</td>
                <td>{{this.name}}</td>
                <td><img src="{{this.image}}" alt="" width="50px" height="50px"></td>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <!-- lấy ảnh từ thiết bị lên -->
                
                <td>
                  <a class="btn btn-default" href="Sua.html">Xem</a>
                  {{!-- <a class="btn btn-danger" href="#">Xóa</a> --}}
                </td>
              </tr>
              {{/each}}
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
