<section id="container">
    <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="http://localhost:3000/littleMonster/thongKe" class="logo"><b>LITTLE MONSTER</b></a>
        <!--logo end-->
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li><a class="logout" href="http://localhost:3000/littleMonster">Đăng xuất</a></li>
            </ul>
        </div>
    </header>
    <!--header end-->

    <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">

                <p class="centered"><a href="#"><img src="/images/avatar.jpg" class="img-circle" width="60"></a></p>
                <h5 class="centered">Trần Võ Thục Miên</h5>
                <li class="mt">
                    <a href="http://localhost:3000/littleMonster/themMoi">
                        <i class="fa fa-tasks"></i>
                        <span>Thêm mới</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="http://localhost:3000/littleMonster/danhSach">
                        <i class="fa fa-th"></i>
                        <span>Danh Sách</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="http://localhost:3000/littleMonster/thongKe">
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Thống Kê</span>
                    </a>
                </li>
            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Thêm Mới</h3>

            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Thêm mới phụ kiện thú cưng</h4>
                        <form class="form-horizontal style-form" method="post" action="/san-pham"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên loại thú cưng</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="category_id">
                                        {{#each categories}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên phụ kiện</label>
                                <div class="col-sm-10">
                                    <input type="text" id="name" onchange="validation()" class="form-control"
                                        name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Giá tiền</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="price" onchange="validation()"
                                        name="price">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Số lượng</label>
                                <div class="col-sm-10">
                                    <input type="text" onchange="validation()" id="quantity" class="form-control"
                                        name="quantity">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Mô tả</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="description">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Ngày sản xuất</label>
                                <div class="col-sm-10">
                                    <input type="date" id="release" onchange="validation()" class="form-control"
                                        name="release">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hình ảnh</label>

                                <div class="col-sm-10">
                                    <input type="file" class="form-control" onchange="onChangeFile();" id="image-file"
                                        name="image">
                                    <img id="image-view"
                                        style="height: 100px; width: 100px; display: none; object-fit: cover;"
                                        class="form-control" src="{{product.image}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu">
                                        <li><button aria-disabled="true" id="submit" type="submit">Lưu</button>></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->

        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

</section>

<script>
    const validation = () => {
        const name = document.getElementById('name').value;
        const price = document.getElementById('price').value;
        const quantity = document.getElementById('quantity').value;
        const release = document.getElementById('release').value;
        const submit = document.getElementById('submit');

        if (!name || name.trim().length == 0) {
            submit.aria - disabled = true;
        } else {
            submit.aria - disabled = false;
        }
    }

    const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
            document.getElementById('image-view').style.display = 'block';
        }
        reader.readAsDataURL(file);
    }
</script>