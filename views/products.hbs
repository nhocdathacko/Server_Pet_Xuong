<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/index" class="list-group-item  ">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Bảng điều khiển
          </a>
          <a href="/user" class="list-group-item">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Quản lý thành viên
          </a>
          <a href="/category" class="list-group-item">
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Loại sản phẩm
          </a>
          <a href="/product" class="list-group-item main-color-bg">
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Bảng sản phẩm
          </a>
          <a href="/statistical" class="list-group-item">
            <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Thống kê
          </a>
        </div>

        <div class="well">
          <h4>Khoa đang hoạt động</h4>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="6" aria-valuemin="0" aria-valuemax="100"
              style="width: 75%;">
              6
            </div>
          </div>
          <h4>Khoa dừng hoạt động </h4>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"
              style="width: 25%;">
              2
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Bảng sản phẩm</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <input class="form-control" type="text" placeholder="Lọc sản phẩm">
              </div>
            </div>
            <br>
            <table class="table table-striped table-hover">
              <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Price</th>
                {{!-- <th>Describes</th> --}}
                <th>Evaluated</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Image</th>
                {{!-- <th>IsPet</th>
                <th>isStop</th> --}}
                <th></th>
              </tr>
              {{#each product}}
              <tr>

                <td>{{this.index}}</td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                {{!-- <td style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{this.describes}}</td>
                --}}
                <td>{{this.evaluate}}</td>
                <td>{{this.category}}</td>
                <td>{{this.quantity}}</td>
                <td><img src="{{this.image}}" alt="" width="50px" height="50px"></td>
                {{!-- <td>{{this.isPet}}</td>
                <td>{{this.isStop}}</td> --}}
                <td>
                  <a class="btn btn-default" onclick="detail('{{this._id}}')">Sửa</a> 
                  <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" 
                  onclick="goDelete('{{this._id}}')">Xóa</a>
                </td>
              </tr>
              {{/each}}
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

